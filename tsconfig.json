{
    "compilerOptions": {
        "lib": ["es2017"],
        "outDir": "dist",
        "rootDir": "src",
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "declaration": true,
        "skipLibCheck": true,
        "strictPropertyInitialization": false
    },
    "include": ["src"],
    "exclude": ["node_modules", "*.test.ts", "dist"]
}
